        }
      ]
    }
  ],
  "categories": ["travel", "lifestyle"],
  "protocol_handlers": [
    {
      "protocol": "web+nva",
      "url": "/?url=%s"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "intent_filters": {
    "scope_url_scheme": "https",
    "scope_url_host": "nva.vercel.app",
    "scope_url_path": "/"
  }
